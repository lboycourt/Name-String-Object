package com.mycompany.namestringobject;

/**
 *
 * @author lboycourt2025
 */
public class NameStringObject {

    public static void main(String[] args) {
        //declare my name
        String strMyName = ("Lauren Boycourt");
        System.out.println("My name is " + strMyName);
        
        //declare the string index
        System.out.println("My name length is " + "\"" + (strMyName.length() + "\""));
        
        //upper case
        System.out.println("My name in upper case is " + "\"" + strMyName.toUpperCase() + "\"");
        
        //lower case
        System.out.println("My name in lower case is " + "\"" + strMyName.toLowerCase() + "\"");
       
        //first letter
        System.out.println("The first letter of my name is " + "\"" + strMyName.charAt(0) + "\"");
        
        //last letter
        System.out.println("The first letter of my name is " + "\"" + strMyName.charAt(14) + "\"");
        
        //space index
        System.out.println("The index of the space between my name is " + "\"" + strMyName.indexOf (' ') + "\"");
    }
}
